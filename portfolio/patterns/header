<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>
   $( document ).ready(function() {
      $("head").append("<link rel='stylesheet' href='/wp-content/themes/twentytwentyfive/my.css'>");
      $("head").append("<link rel='stylesheet' href='https://code.jquery.com/ui/1.13.3/themes/smoothness/jquery-ui.css'>");
      //alert(navigator.userAgent);
      var browser = navigator.userAgent;
      var chrome = /Chrome/i;
      var firefox = /Firefox/i;
      var edge = /Edge?/i;
      var safari = /Safari/i;
      var isFirefox = firefox.test(browser);
      var isChrome = chrome.test(browser);
      var isEdge = edge.test(browser);
      var itemStyles = {
           backgroundColor: "black",
           width: "100%",
           flexBasis: "100%",
           borderTop: "1px solid #8F37FA",
           borderBottom: "1px solid #8F37FA",
           borderLeft: "1px solid #8F37FA",
           paddingTop: "5px",
           paddingBottom: "5px",
           textAlign: "center"
      };
      if ( isFirefox ) {
          $(".md-item").css( itemStyles );
          $(".md-nav").css("top","75px");  
          $(".md-nav").css("zIndex","1000");      
      }
      if ( isChrome || isEdge ) {
          $(".md-item").css( itemStyles );
          $(".md-nav").css("top","69px");  
          $(".md-nav").css("zIndex","1000");      
      }
      var vpw = $( window ).width();
      if (vpw < 600) {
         $("#menu").hide();
         $(".wp-block-site-title").css("margin","auto");
         $("#sm-dropdown").css({"display":"inline-block","position":"absolute","top":"78px","left":"0px"});  
      } else if (vpw >= 600 && vpw < 768) {
         $("#menu").hide();
         $("#mdm-menu").show();
         $("#mdm-menu").css("width","40%");
      } else if (vpw >= 768 && vpw < 992) {
         $("#menu").hide();
         $("#mdm-menu").show();
         $("#mdm-menu").css("width","35%");
      } else if (vpw >= 992 && vpw < 1300) {
         $("#menu").hide();
         $("#mdm-menu").show();
         $("#mdm-menu").css("width","30%");
      } else {
         $("#mdm-menu").hide();
         $("#menu").show();
      }
   });
   $( window ).on("resize", function() {
      var vpw = $( window ).width();
      if (vpw < 600) {
         $("#menu, #mdm-menu").hide();
         $(".wp-block-site-title").css("margin","auto");
         $("#sm-dropdown").css({"display":"inline-block","position":"absolute","top":"78px","left":"0px","z-index":"50"});  
      } else if (vpw >= 600 && vpw < 768) {
         $(".wp-block-site-title").css("margin","auto auto auto 0px");
         $("#menu, #sm-dropdown").hide();
         $("#mdm-menu").show();
         $("#mdm-menu").css("width","40%");
      } else if (vpw >= 768 && vpw < 992) {
         $(".wp-block-site-title").css("margin","auto auto auto 0px");
         $("#menu, #sm-dropdown").hide();
         $("#mdm-menu").show();
         $("#mdm-menu").css("width","35%");
      } else if (vpw >= 992 && vpw < 1300) {
         $(".wp-block-site-title").css("margin","auto auto auto 0px");
         $("#menu, #sm-dropdown").hide();
         $("#mdm-menu").show();
         $("#mdm-menu").css("width","30%");
      } else {
         $(".wp-block-site-title").css("margin","auto auto auto 0px");
         $("#mdm-menu, #sm-dropdown").hide();
         $("#menu").show();
      }
   });
   $("#md-dropdown").on("click", function() {
      var vpw = $(window).width();
      var mdOpen = $("#md-nav").css("display");
      if ( mdOpen != "none" ) {
         $("#md-nav").hide();
      } else {
         $("#md-nav").show();
      }
   });
   $("#sm-dropdown").on("click", function() {
      var smOpen = $("#sm-menu").css("display");
      if ( smOpen != "none" ) {
         $("#sm-menu").hide();
         $("#sm-dropdown").css({"display":"inline-block","position":"absolute","top":"78px","left":"0px"});
      } else {
         $("#sm-menu").css({"display":"flex","flex-direction":"column","width":"100%","position":"absolute","top":"68px","left":"0px","z-index":"100"});
         $(".sm-item").css({"flex-basis":"100%","background-color":"black","color":"white","text-align":"center","border-bottom":"2px solid #8F37FA","padding-top":"5px","padding-bottom":"5px"}); 
      }
   });
   $("#sm-close").on("click", function() {
      $("#sm-menu").hide();
      $("#sm-dropdown").css({"display":"inline-block","position":"absolute","top":"78px","left":"0px"});
   });
   $("#md-close").on("click", function() {
      $("#md-nav").hide();
   });
</script>
