<script>
   $( window ).on("load", function() {
      $("head").append("<link rel='stylesheet' href='/wp-content/themes/twentytwentyfive/my.css'>");
      $("head").append("<link rel='stylesheet' href='https://code.jquery.com/ui/1.13.3/themes/smoothness/jquery-ui.css'>");
      var vpw = $( window ).width();
      $("#sysadminsubmit").text(vpw);
      if (vpw < 600) {
         //$("#mainPanel").css("box-sizing","border-box");
         $("#mainPanel").css("width","90%");
         $("#lg-pageTitle").css("display","none");
         $("#sm-pageTitle").show();
         $("label").css("flex-basis","50%");
         $("form input").not("#service").css({"flex-basis":"90%","margin-bottom":"10px"});
         $("textarea").css({"flex-basis":"90%","margin-bottom":"10px"});
      } else if (vpw >= 600 && vpw < 768) {
         $("#mainPanel").css("width","90%");
         $("#lg-pageTitle").css("display","none");
         $("#sm-pageTitle").show();
         $("label").css("flex-basis","50%");
         $("form input").not("#service").css({"flex-basis":"90%","margin-bottom":"10px"});
         $("textarea").css({"flex-basis":"90%","margin-bottom":"10px"});
      } else if (vpw >= 768 && vpw < 992) {
         $("#lg-pageTitle").show();
         $("#sm-pageTitle").css("display","none");
         $("form").css("height","+=100");
         //$("label").css({"flex-basis":"125px","display":"inline-block"});
         //$("form input").not("#service").css({"flex-basis":"185px","display":"inline-block"});
         $("form textarea").css({"flex-basis":"510px","display":"inline-block"});
      } else if (vpw >= 992 && vpw < 1200) {
         $("#lg-pageTitle").show();
         $("#sm-pageTitle").css("display","none");
         $("form").css("height","+=100");
         //$("label").css({"flex-basis":"125px","display":"inline-block"});
         //$("form input").not("#service").css({"flex-basis":"185px","display":"inline-block"});
         $("form textarea").css({"flex-basis":"510px","display":"inline-block"});
      } else {
         $("#lg-pageTitle").show();
         $("#sm-pageTitle").css("display","none");
         $("form").css("height","+=100");
         //$("label").css({"flex-basis":"125px","display":"inline-block"});
         //$("form input").not("#service").css({"flex-basis":"185px","display":"inline-block"});
         $("form textarea").css({"flex-basis":"510px","display":"inline-block"});
      }
   });
   $( window ).on("resize", function() {
      var vpw = $( window ).width();
      $("#sysadminsubmit").text(vpw);
      if (vpw < 600) {
         //$("#mainPanel").css("box-sizing","border-box");
         //$("#mainPanel").css("border-radius","0px");
         $("#lg-pageTitle").css("display","none");
         $("#sm-pageTitle").show();
         $("label").css("flex-basis","50%");
         $("form input").not("#service").css({"flex-basis":"90%","margin-bottom":"10px","margin-right":"none"});
         $("textarea").css({"flex-basis":"90%","margin-bottom":"10px"});
      } else if (vpw >= 600 && vpw < 768) {
         $("form").css("height","835px");
         $("#lg-pageTitle").css("display","none");
         $("#sm-pageTitle").show();
         $("label").css("flex-basis","50%");
         $("form input").not("#service").css({"flex-basis":"90%","margin-bottom":"10px","margin-right":"none"});
         $("textarea").css({"flex-basis":"90%","margin-bottom":"10px"});
      } else if (vpw >= 768 && vpw < 992) {
         $("#lg-pageTitle").show();
         $("#sm-pageTitle").css("display","none");
         $("form").css("height","615px");
         $("label").css({"flex-basis":"125px","display":"inline-block"});
         $("form input").not("#service").css({"flex-basis":"185px","display":"inline-block"});
         $("form textarea").css({"flex-basis":"510px","display":"inline-block"});
      } else if (vpw >= 992 && vpw < 1200) {
         $("#lg-pageTitle").show();
         $("#sm-pageTitle").css("display","none");
         $("label").css({"flex-basis":"125px","display":"inline-block"});
         $("form input").not("#service").css({"flex-basis":"185px","display":"inline-block"});
         $("form textarea").css({"flex-basis":"510px","display":"inline-block"});
      } else {
         $("#lg-pageTitle").show();
         $("#sm-pageTitle").css("display","none");
         $("label").css({"flex-basis":"125px","display":"inline-block"});
         $("form input").not("#service").css({"flex-basis":"185px","display":"inline-block"});
         $("form textarea").css({"flex-basis":"510px","display":"inline-block"});
      }
