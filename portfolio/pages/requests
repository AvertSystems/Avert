function request() {
      //let firstName = $("#firstName").val();
      //let lastName = $("#lastName").val();
      var xhttp = new XMLHttpRequest();
        xhttp.onreadystatechange = function() {
          if (this.readyState == 4) {
            if (this.status == 200) {
               document.getElementById("dialog-message").innerHTML = this.responseText;
               $("#dialog-message").show();
            }
          }
        };
        xhttp.open("POST", "../requests.php");
        xhttp.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
        xhttp.send("firstName=jane");
    }
   $("#sysAdminDesc").click(function(){
      $("#sysAdminPara").toggle();
      $(this).toggle();
      $("#sysAdminDescHide").toggle();
   });
   $("#sysAdminDescHide").click(function(){
      $("#sysAdminPara").toggle();
      $(this).toggle();
      $("#sysAdminDesc").toggle();
   });
   $("#backtohome").click(function(){
      $( "window" ).href(/);
    });
