   $("#projectDesc").click(function(){
      $("#projectPara").toggle();
      $(this).toggle();
      $("#projectDescHide").toggle();
   });
   $("#projectDescHide").click(function(){
      $("#projectPara").toggle();
      $(this).toggle();
      $("#projectDesc").toggle();
